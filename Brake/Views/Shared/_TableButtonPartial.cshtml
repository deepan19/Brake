<td class="text-right">
    <div class="btn-group" role="group">
        <a type="button" class="btn btn-primary" href="@Url.Action("Edit/"+Model)"><i class="fa-solid fa-pen-to-square"></i></a>
        <form method="post" action="Delete">
            <button onclick="if (!confirm('Are you sure you want to delete this Item?')){return false}" type="submit" class="btn btn-danger rounded-0" asp-action="Delete" asp-route-id="@Model"><i class="fa-solid fa-trash-can"></i></button>
        </form>

    </div>
</td>